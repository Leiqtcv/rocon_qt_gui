##############################################################################
# Imports
##############################################################################

import sys
import signal

from python_qt_binding.QtGui import QApplication  # QAction, QFrame, QIcon,QMainWindow, QMenu, QSystemTrayIcon
from python_qt_binding.QtCore import QTimer  # Qt

import rocon_remocon

##############################################################################
# Globals
##############################################################################.

app = None
myapp = None

##############################################################################
# Methods
##############################################################################.


def signal_handler(signum, f):
    print "[main] Interrupt"
    if signum == signal.SIGINT:
        app.exit(0)

##############################################################################
# Main
##############################################################################.


if __name__ == "__main__":

    signal.signal(signal.SIGINT, signal_handler)
    app = QApplication(sys.argv)
    # Let the interpreter run each 200 ms.
    timer = QTimer()
    timer.start(200)
    timer.timeout.connect(lambda: None)
    myapp = rocon_remocon.remocon.RemoconMain(None, "Rocon Remocon", app)
    app.exec_()
    print "rocon_remocon: Main end"
